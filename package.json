{
  "name": "tui-agent-cli",
  "version": "0.1.0",
  "description": "A lightweight TUI CLI for AI agents with agentic loop support",
  "type": "module",
  "license": "MIT",
  "author": "",
  "bin": {
    "tui-agent": "./bin/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "start": "bun run src/index.tsx",
    "build": "bun build ./src/index.tsx --compile --outfile dist/tailuge",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "bun test",
    "format": "prettier --write src"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.3.9",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^2.0.0",
    "@ai-sdk/groq": "^2.0.0",
    "@ai-sdk/mistral": "^2.0.0",
    "@ai-sdk/openai": "^2.0.0",
    "@ai-sdk/openai-compatible": "^2.0.30",
    "@clack/prompts": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.25.0",
    "@opentui/core": "^0.1.79",
    "@opentui/solid": "^0.1.79",
    "ai": "^5.0.0",
    "chalk": "^5.4.0",
    "clipboardy": "^5.3.0",
    "marked": "^17.0.0",
    "marked-terminal": "^7.3.0",
    "ora": "^9.3.0",
    "solid-js": "^1.9.10",
    "strip-ansi": "^7.1.0",
    "yargs": "^18.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "prettier": "^3.6.0",
    "typescript": "^5.8.0"
  },
  "trustedDependencies": [
    "esbuild"
  ]
}
