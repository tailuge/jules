{
  "name": "tui-agent-cli",
  "version": "0.1.0",
  "description": "A lightweight TUI CLI for AI agents with agentic loop support",
  "type": "module",
  "license": "MIT",
  "author": "",
  "bin": {
    "tui-agent": "./bin/cli.ts"
  },
  "scripts": {
    "dev": "bun run --preload @opentui/solid/preload src/index.tsx",
    "start": "bun run --preload @opentui/solid/preload src/index.tsx",
    "build": "bun run build.ts",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "test": "bun test",
    "format": "prettier --write src"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.3.9",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.44",
    "@ai-sdk/google": "^3.0.29",
    "@ai-sdk/groq": "^3.0.24",
    "@ai-sdk/mistral": "^3.0.20",
    "@ai-sdk/openai": "^3.0.29",
    "@ai-sdk/openai-compatible": "^2.0.30",
    "@clack/prompts": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opentui/core": "^0.1.79",
    "@opentui/solid": "^0.1.79",
    "ai": "^6.0.86",
    "chalk": "^5.6.2",
    "clipboardy": "^5.3.0",
    "marked": "^17.0.2",
    "marked-terminal": "^7.3.0",
    "ora": "^9.3.0",
    "solid-js": "^1.9.11",
    "strip-ansi": "^7.1.2",
    "yargs": "^18.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "esbuild"
  ]
}
