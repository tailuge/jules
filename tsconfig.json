{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./docs/assets/js",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}